{% comment %}
This code creates a sticky bottom bar on product pages.
It displays the product image, title, and a button to add the product to the cart.
The bar's appearance (colors, size, etc.) is fully customizable in the theme editor.
{% endcomment %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sticky-bar-{{ ai_gen_id }} {
    position: fixed;
    bottom: {{ block.settings.bottom_margin }}px;
    left: 50%;
    transform: translateX(-50%);
    width: {{ block.settings.bar_width }}%;
    max-width: {{ block.settings.max_width }}px;
    min-width: {{ block.settings.min_width }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: 50px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    padding: {{ block.settings.padding }}px;
    display: flex;
    align-items: center;
    gap: 12px;
    backdrop-filter: blur(10px);
  }

  .ai-sticky-bar-image-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .ai-sticky-bar-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-sticky-bar-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-sticky-bar-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-sticky-bar-content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-sticky-bar-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .ai-sticky-bar-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 500;
    margin: 2px 0 0;}

  .ai-sticky-bar-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 50px;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    transition: background-color 0.3s ease, transform 0.2s ease;
    flex-shrink: 0;
  }

  .ai-sticky-bar-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  @media screen and (max-width: 749px) {
    .ai-sticky-bar-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_bar_width }}%;
      max-width: {{ block.settings.mobile_max_width }}px;
      min-width: {{ block.settings.mobile_min_width }}px;
      padding: {{ block.settings.mobile_padding }}px;
    }

    .ai-sticky-bar-image-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_image_size }}px;
      height: {{ block.settings.mobile_image_size }}px;
    }

    .ai-sticky-bar-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }

    .ai-sticky-bar-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_price_size }}px;
    }

    .ai-sticky-bar-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_text_size }}px;
      padding: {{ block.settings.mobile_button_padding }}px {{ block.settings.mobile_button_padding | times: 1.2 }}px;
    }
  }
{% endstyle %}

<sticky-product-bar-{{ ai_gen_id }}
  class="ai-sticky-bar-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-sticky-bar-image-{{ ai_gen_id }}">
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | image_url: width: 200}}"
        alt="{{ product.featured_image.alt | escape }}"
        loading="lazy"
        width="200"
        height="200"
      >
    {% else %}
      <div class="ai-sticky-bar-image-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-sticky-bar-content-{{ ai_gen_id }}">
    <h3 class="ai-sticky-bar-title-{{ ai_gen_id }}">
      {% if product.title %}
        {{ product.title }}
      {% else %}
        {{ block.settings.fallback_title }}
      {% endif %}
    </h3>
    {% if product.price and block.settings.show_price %}
      <div class="ai-sticky-bar-price-{{ ai_gen_id }}">
        {{ product.price | money }}
      </div>
    {% endif %}
  </div>

  <form method="post" action="/cart/add" accept-charset="UTF-8" class="ai-sticky-bar-form-{{ ai_gen_id }}" enctype="multipart/form-data">
    {% if product.has_only_default_variant %}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
      <button
        class="ai-sticky-bar-button-{{ ai_gen_id }}"
        type="submit"
        name="add"
      >
        {{ block.settings.button_text }}
      </button>
    {% else %}
      <button
        class="ai-sticky-bar-button-{{ ai_gen_id }}"
        type="button"
        aria-label="Select options"
      >
        {{ block.settings.button_text }}
      </button>
    {% endif %}
  </form>
</sticky-product-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class StickyProductBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.form = this.querySelector('form');
        this.button = this.querySelector('.ai-sticky-bar-button-{{ ai_gen_id }}');
        this.selectOptions = this.button && this.button.type === 'button';
        this.setupEventListeners();
      }

      connectedCallback() {
        if (!this.form) return;

        if (this.selectOptions) {
          this.button.addEventListener('click', this.scrollToAddToCart.bind(this));
        }
      }

      setupEventListeners() {
        // This is only for the "Select options" button to scroll to the main form
        if (this.selectOptions) {
          this.button.addEventListener('click', this.scrollToAddToCart.bind(this));
        }
      }

      scrollToAddToCart() {
        const addToCartButton = document.querySelector('[name="add"], .product-form__cart-button, .btn--add-to-cart, .add-to-cart-button, .product-form__add-button');
        
        if (addToCartButton) {
          addToCartButton.scrollIntoView({
            behavior: 'smooth',
            block: 'center'
          });
          setTimeout(() => {
            addToCartButton.focus();
          }, 500);
        }
      }
    }

    customElements.define('sticky-product-bar-{{ ai_gen_id }}', StickyProductBar{{ ai_gen_id }});
  })();
</script>

