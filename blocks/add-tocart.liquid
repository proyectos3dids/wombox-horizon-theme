Sticky Product Bar ‚Äî versi√≥n blindada con nombres √∫nicos de clase.
Nunca desaparece una vez aparece.
{% endcomment %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .stickybar-{{ ai_gen_id }} {
    position: fixed;
    bottom: {{ block.settings.bottom_margin }}px;
    left: 50%;
    transform: translateX(-50%);
    width: {{ block.settings.bar_width }}%;
    max-width: {{ block.settings.max_width }}px;
    min-width: {{ block.settings.min_width }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 9999; /* üîí m√°s alto que cualquier footer */
    padding: {{ block.settings.padding }}px;
    display: flex;
    align-items: center;
    gap: 12px;
    backdrop-filter: blur(10px);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .stickybar-{{ ai_gen_id }}.sb-visible {
    opacity: 1;
    visibility: visible;
  }

  /* üöÄ Fuerza total: nunca se oculta */
  .stickybar-{{ ai_gen_id }}.sb-force {
    opacity: 1 !important;
    visibility: visible !important;
    display: flex !important;
  }

  .stickybar-img-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .stickybar-img-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .stickybar-content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .stickybar-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .stickybar-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 500;
    margin: 2px 0 0;
  }

  .stickybar-form-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .stickybar-btn-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 20px;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    transition: background-color 0.3s ease, transform 0.2s ease;
    flex-shrink: 0;
  }

  .stickybar-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  /* Cantidad */
  .stickybar-qty-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 20px;
    padding: 4px 8px;
    flex-shrink: 0;
    gap: 8px;
  }

  .stickybar-qty-btn-{{ ai_gen_id }} {
    background: transparent;
    border: none;
    color: {{ block.settings.text_color }};
    font-size: 1.2em;
    cursor: pointer;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stickybar-qty-input-{{ ai_gen_id }} {
    width: 40px;
    text-align: center;
    border: none;
    background: transparent;
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .stickybar-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_bar_width }}%;
      max-width: {{ block.settings.mobile_max_width }}px;
      min-width: {{ block.settings.mobile_min_width }}px;
      padding: {{ block.settings.mobile_padding }}px;
    }

    .stickybar-img-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_image_size }}px;
      height: {{ block.settings.mobile_image_size }}px;
    }

    .stickybar-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }

    .stickybar-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_price_size }}px;
    }

    .stickybar-btn-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_text_size }}px;
      padding: {{ block.settings.mobile_button_padding }}px {{ block.settings.mobile_button_padding | times: 1.2 }}px;
    }

    .stickybar-qty-input-{{ ai_gen_id }} {
      width: 30px;
      font-size: {{ block.settings.mobile_price_size }}px;
    }
  }
{% endstyle %}

{% assign display_product = product %}
{% if block.settings.featured_product != blank %}
  {% assign display_product = block.settings.featured_product %}
{% endif %}

<stickybar-{{ ai_gen_id }}
  class="stickybar-{{ ai_gen_id }}"
  style="z-index:9999;"
  {{ block.shopify_attributes }}
>
  <div class="stickybar-img-{{ ai_gen_id }}">
    {% if display_product.featured_image %}
      <img
        src="{{ display_product.featured_image | image_url: width: 200}}"
        alt="{{ display_product.featured_image.alt | escape }}"
        loading="lazy"
        width="200"
        height="200"
      >
    {% endif %}
  </div>

  <div class="stickybar-content-{{ ai_gen_id }}">
    <h3 class="stickybar-title-{{ ai_gen_id }}">{{ display_product.title }}</h3>
    {% if block.settings.show_price %}
      <div class="stickybar-price-{{ ai_gen_id }}">{{ display_product.price | money }}</div>
    {% endif %}
  </div>

  <form method="post" action="/cart/add" class="stickybar-form-{{ ai_gen_id }}">
    <input type="hidden" name="id" value="{{ display_product.selected_or_first_available_variant.id }}">
    {% if block.settings.show_quantity_selector %}
      <div class="stickybar-qty-{{ ai_gen_id }}">
        <button type="button" class="stickybar-qty-btn-{{ ai_gen_id }}" data-action="minus">-</button>
        <input type="number" name="quantity" value="1" min="1" class="stickybar-qty-input-{{ ai_gen_id }}">
        <button type="button" class="stickybar-qty-btn-{{ ai_gen_id }}" data-action="plus">+</button>
      </div>
    {% else %}
      <input type="hidden" name="quantity" value="1">
    {% endif %}
    <button class="stickybar-btn-{{ ai_gen_id }}" type="submit" name="add">
      {{ block.settings.button_text }}
    </button>
  </form>
</stickybar-{{ ai_gen_id }}>

<script>
(function() {
  const stickyBar = document.querySelector('.stickybar-{{ ai_gen_id }}');
  const scrollThreshold = 100;
  let shownOnce = false;

  if (stickyBar) {
    function handleScroll() {
      if (!shownOnce && window.scrollY > scrollThreshold) {
        stickyBar.classList.add('sb-visible', 'sb-force'); // üöÄ blindamos
        shownOnce = true;
        window.removeEventListener('scroll', handleScroll);
      }
    }
    window.addEventListener('scroll', handleScroll);
    handleScroll();
  }
})();
</script>

