<div class="ai-newsletter-signup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-signup__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-newsletter-signup__heading-{{ ai_gen_id }} heading-{{ block.settings.heading_font_style }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-newsletter-signup__description-{{ ai_gen_id }} text-{{ block.settings.description_font_style }}">{{ block.settings.description }}</div>
    {% endif %}

    {% form 'customer' %}
      <div class="ai-newsletter-signup__form-{{ ai_gen_id }}"><div class="ai-newsletter-signup__email-wrapper-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-newsletter-signup__email-input-{{ ai_gen_id }} input-{{ block.settings.input_font_style }}"
            value="{{ form.email }}"
            placeholder="{{ block.settings.email_placeholder }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-newsletter-signup-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-newsletter-signup-success-{{ ai_gen_id }}"
            {% endif %}
            required
          >
          <button
            type="submit"
            class="ai-newsletter-signup__submit-button-{{ ai_gen_id }} button-{{ block.settings.button_font_style }}"
          >
            {{ block.settings.button_text }}
          </button>
        </div>

        {% if block.settings.show_privacy_checkbox %}
          <div class="ai-newsletter-signup__checkbox-wrapper-{{ ai_gen_id }}">
            <input
              type="checkbox"
              id="ai-newsletter-privacy-{{ ai_gen_id }}"
              name="contact[accepts_marketing]"
              class="ai-newsletter-signup__checkbox-{{ ai_gen_id }}"
              value="1"
              required
            >
            <label
              for="ai-newsletter-privacy-{{ ai_gen_id }}"
              class="ai-newsletter-signup__checkbox-label-{{ ai_gen_id }} checkbox-{{ block.settings.checkbox_font_style }}"
            >
              {{ block.settings.privacy_text }}
            </label>
          </div>
        {% endif %}

        {% if form.posted_successfully? %}
          <div
            id="ai-newsletter-signup-success-{{ ai_gen_id }}"
            class="ai-newsletter-signup__success-{{ ai_gen_id }}"
          >
            {{ block.settings.success_message }}
          </div>
        {% endif %}

        {% if form.errors %}
          <div
            id="ai-newsletter-signup-error-{{ ai_gen_id }}"
            class="ai-newsletter-signup__error-{{ ai_gen_id }}"
          >
            {% for error in form.errors %}
              {{ error }}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <input type="hidden" name="contact[tags]" value="newsletter">
    {% endform %}
  </div>
</div>

