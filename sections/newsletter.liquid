{% comment %} Lógica de puntos de ruptura y equivalencias {% endcomment %}
{%- render 'breakpoints', section: section -%}

{%- if section.blocks.size > 0 -%}
  {%- if section.index > 2 -%}
    <link rel="stylesheet" href="{{ 'text-overlay.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- else -%}
    {{ 'text-overlay.css' | asset_url | stylesheet_tag }}
  {%- endif -%}
{%- endif -%}

{%- liquid
  assign bg_color = false
  assign padding = false

  assign color_scheme = section.settings.color_scheme
  assign bg_color = false

  if color_scheme == 'default'
    assign bg_color = settings.bg_color
  elsif color_scheme == '1'
    assign bg_color = settings.color_scheme_1_bg_grad | default: settings.color_scheme_1_bg
  elsif color_scheme == '2'
    assign bg_color = settings.color_scheme_2_bg_grad | default: settings.color_scheme_2_bg
  elsif color_scheme == '3'
    assign bg_color = settings.color_scheme_3_bg_grad | default: settings.color_scheme_3_bg
  endif

  if bg_color == 'rgba(0,0,0,0)'
    assign bg_color = false
  endif

  if section.settings.image == blank
    if bg_color != false and bg_color != settings.bg_color
      assign padding = true
    endif
  endif
-%}

{%- if section.settings.image != blank or color_scheme == 'white' -%}
  {%- style -%}
    {%- if section.settings.tint_opacity > 0 -%}
      #{{ section.id }} .media::after {
        background-color: rgba({{ section.settings.tint_color.red }}, {{ section.settings.tint_color.green }}, {{ section.settings.tint_color.blue }}, {{ section.settings.tint_opacity | divided_by: 100.0 }});
      }
    {%- endif -%}
    {%- if bg_color -%}
      #{{ section.id }} .text-overlay { background: {{ bg_color }}; }
    {%- endif -%}
    {%- if color_scheme == "white" -%}
      #{{ section.id }} {
        --color-scheme-white-text: {{ section.settings.transparent_content_color.red }} {{ section.settings.transparent_content_color.green }} {{ section.settings.transparent_content_color.blue }};
      }
    {%- endif -%}
  {%- endstyle -%}
{%- endif -%}

{% render 'grid-gap', section: section %}
<div class="section-wrapper-cc {% render 'grid-breakpoints', section: section %}">
  <div class="section-customize">
    {%- unless section.settings.full_width -%}
      <div class="container">
    {%- endunless -%}

    <div
      class="newsletter section-{{ section.id }} section{% if padding %} section--padded{% endif %}{% if section.settings.full_width %}{% if section.settings.image != blank or padding %} section--full-width{% endif %}{% else %} page-width {% endif %}{% unless color_scheme == 'none' %} color-scheme color-scheme--{{ color_scheme }}{% endunless %} relative"
      id="{{ section.id }}"
    >
      <div class="flex relative {{ section.settings.overlay_position }}">
        {%- if section.settings.image != blank -%}
          {%- assign sizes = false -%}
          <div class="media media--has-overlay absolute top-0 left-0 w-full h-full">
            {%- unless section.settings.full_width -%}
              {%- capture sizes -%}
                {%- render 'sizes-attribute', min: '100vw', sm: 'page', md: false, lg: false, xl: 'page', max: 'page' -%}
              {%- endcapture -%}
            {%- endunless -%}

            {% render 'image',
              image: section.settings.image,
              widths: '750, 856, 1440, 1680, 1920, 2560',
              src_width: 1680,
              sizes: sizes,
              section_index: section.index,
              class: 'img-fit'
            %}
          </div>
        {%- endif -%}

        <div class="container flex {{ section.settings.overlay_position }}">
          <div
            class="{% unless section.settings.image == blank %}text-overlay {% if bg_color %}text-overlay--bg {% endif %}{% endunless %} {{ section.settings.text_align }}"
            {% if settings.animations_enabled != 'disabled' %}
              data-cc-animate
            {% endif %}
          >
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'subheading' -%}
                  {%- if block.settings.text != blank -%}
                    <p class="section__block subheading" {{ block.shopify_attributes }}>
                      {{- block.settings.text | escape -}}
                    </p>
                  {%- endif -%}

                {%- when 'heading' -%}
                  {%- if block.settings.heading != blank -%}
                    <h2
                      class="section__block section__block--heading {{ block.settings.heading_size }}"
                      {{ block.shopify_attributes }}
                    >
                      {{- block.settings.heading | escape -}}
                    </h2>
                  {%- endif -%}

                {%- when 'text' -%}
                  {%- if block.settings.text != blank -%}
                    <div
                      class="section__block reading-width rte {% if section.settings.text_align == 'text-start' %} mie-auto{% elsif section.settings.text_align == 'text-end' %} mis-auto{% else %} mx-auto{% endif %}{% if block.settings.enlarge_text %} enlarge-text{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}

                {%- when 'form' -%}
                  <div
                    class="section__block form-width {% if section.settings.text_align == 'text-start' %} mie-auto{% elsif section.settings.text_align == 'text-end' %} mis-auto{% else %} mx-auto{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {%- assign form_id = section.id | append: '-signup' -%}
                    {% render 'newsletter-signup', id: form_id, arrow_button: true, tags: 'newsletter' %}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>

    {%- unless section.settings.full_width -%}
      </div>
    {%- endunless -%}
  </div>
</div>

