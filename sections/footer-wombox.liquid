{{ 'footer-wombox.css' | asset_url | stylesheet_tag }} 
<!-- sections/footer-wombox.liquid -->
<footer class="wombox-footer">
  <div class="wbf__inner">
    <!-- Columna 1 -->
    <nav class="wbf__col">
      <ul class="wbf__list">
        <li class="wbf__item"><a class="wbf__link" href="#">Preguntas Frecuentes</a></li>
        <li class="wbf__item"><a class="wbf__link" href="#">Nuestra filosofía</a></li>
        <li class="wbf__item"><a class="wbf__link" href="#">Nuestros productos</a></li>
      </ul>
    </nav>

    <!-- Columna 2 -->
    <nav class="wbf__col">
      <ul class="wbf__list">
        <li class="wbf__item"><a class="wbf__link" href="#">Política de Privacidad</a></li>
        <li class="wbf__item"><a class="wbf__link" href="#">Aviso Legal</a></li>
        <li class="wbf__item"><a class="wbf__link" href="#">Política de Cookies</a></li>
      </ul>
    </nav>

    <!-- Columna 3 -->
    <nav class="wbf__col">
      <ul class="wbf__list">
        <li class="wbf__item"><a class="wbf__link" href="#">Contacto</a></li>
        <li class="wbf__item"><a class="wbf__link" href="#">Términos y condiciones</a></li>
        <li class="wbf__item"><a class="wbf__link" href="#">Métodos de pago</a></li>
      </ul>
    </nav>

    <!-- Columna 4: CTA + selectores + redes -->
    <div class="wbf__cta-col">
      <a href="#" class="wbf__cta">DESCUBRE NUESTRAS CAJAS</a>

    

      <div class="wbf__social" aria-label="Redes sociales">
         *selectores de idioma y moneda
        <a href="#" title="Facebook">f</a>
        <a href="#" title="Instagram">i</a>
        <a href="#" title="X">x</a>
        <a href="#" title="LinkedIn">in</a>
        <a href="#" title="YouTube">▶</a>
        <a href="#" title="TikTok">t</a>
      </div>
    </div>
  </div>

  <!-- Franja inferior -->
  {% if section.settings.strip_image != blank %}
    {% assign strip_src = section.settings.strip_image | image_url %}
    <div class="wbf__bottom">
      <div class="wbf__marquee"
          style="
            --marquee-h: {{ section.settings.strip_height }}px;
            --marquee-speed: {{ section.settings.strip_speed }}s;
            --marquee-gap: {{ section.settings.strip_gap }}px;">
        <div class="wbf__track">
          {%- for i in (1..8) -%}
            <img src="{{ strip_src }}" alt="WOMBOX" class="wbf__item-img">
          {%- endfor -%}
          {%- for i in (1..8) -%}
            <img src="{{ strip_src }}" alt="WOMBOX" class="wbf__item-img">
          {%- endfor -%}
        </div>
      </div>

      <p class="wbf__copy">© {{ 'now' | date: "%Y" }} WOMBOX</p>
    </div>
  {% endif %}
</footer>

{% schema %}
{
  "name": "Footer WOMBOX (Desktop)",
  "tag": "section",
  "class": "section-footer-wombox",
  "settings": [
    {
      "type": "image_picker",
      "id": "strip_image",
      "label": "Imagen de franja (se repite en bucle)",
      "info": "Sube la imagen con WOMBOX + claim en horizontal, fondo transparente si quieres que respire."
    },
    {
      "type": "range",
      "id": "strip_height",
      "label": "Altura de la franja",
      "min": 60,
      "max": 220,
      "step": 2,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "strip_speed",
      "label": "Velocidad del slider",
      "min": 5,
      "max": 60,
      "step": 1,
      "default": 25,
      "unit": "s"
    },
    {
      "type": "range",
      "id": "strip_gap",
      "label": "Separación entre imágenes",
      "min": 0,
      "max": 300,
      "step": 5,
      "default": 140,
      "unit": "px"
    }
  ],
  "presets": [
    { "name": "Footer WOMBOX (Desktop)" }
  ]
}
{% endschema %}
