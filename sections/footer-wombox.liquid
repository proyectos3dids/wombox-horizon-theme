{% comment %} {{ 'footer-wombox.css' | asset_url | stylesheet_tag }} {% endcomment %}

<footer class="footer">
  <div class="footer-content">
    <!-- Columna 1 -->
    <div class="footer-column">
      <button class="footer-title">WOMBOX</button>
      <ul class="footer-links">
        <li><a href="#">Preguntas frecuentes</a></li>
        <li><a href="#">Nuestra filosofía</a></li>
        <li><a href="#">Nuestros productos</a></li>
      </ul>
    </div>

    <!-- Columna 2 -->
    <div class="footer-column">
      <button class="footer-title">LEGALES</button>
      <ul class="footer-links">
        <li><a href="#">Política de Privacidad</a></li>
        <li><a href="#">Aviso Legal</a></li>
        <li><a href="#">Política de Cookies</a></li>
        <li><a href="#">Términos y condiciones</a></li>
        <li><a href="#">Métodos de pago</a></li>
      </ul>
    </div>

    <!-- Columna 3 -->
    <div class="footer-column">
      <button class="footer-title">CONTACTO</button>
      <ul class="footer-links">
        <li><a href="#">Contacto</a></li>
      </ul>
    </div>

    <!-- Redes -->
    <div class="footer-social">
      <a href="#"><i class="icon">f</i></a>
      <a href="#"><i class="icon">i</i></a>
      <a href="#"><i class="icon">x</i></a>
      <a href="#"><i class="icon">l</i></a>
      <a href="#"><i class="icon">▶</i></a>
      <a href="#"><i class="icon">t</i></a>
    </div>

    <!-- Selector idioma / moneda -->
    <div class="footer-selectors">
      <select>
        <option>ESPAÑA €</option>
      </select>
      <select>
        <option>ESPAÑOL</option>
      </select>
    </div>

    <!-- Métodos de pago -->
    <div class="footer-payments">
      <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Visa.svg" alt="Visa">
      <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" alt="PayPal">
      <img src="https://upload.wikimedia.org/wikipedia/commons/4/41/Klarna_Logo_black.svg" alt="Klarna">
      <img src="https://upload.wikimedia.org/wikipedia/commons/5/5f/Apple_Pay_logo.svg" alt="Apple Pay">
      <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_Pay_Logo.svg" alt="Google Pay">
    </div>
  </div>

  <!-- Marca -->
  <div class="footer-bottom">
    <h2>WOMBOX</h2>
    <p>HECHO POR Y PARA ELLAS</p>
    <p>© 2024 WOMBOX</p>
  </div>
</footer>

<script>
  // Desplegables en móvil
  const titles = document.querySelectorAll('.footer-title');
  titles.forEach(title => {
    title.addEventListener('click', () => {
      if (window.innerWidth <= 768) {
        title.classList.toggle('active');
        title.nextElementSibling.classList.toggle('show');
      }
    });
  });
</script>

