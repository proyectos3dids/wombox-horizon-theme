    <div class="section-{{ section.id }}-settings">
      {% if heading != blank %}
        <div class="media-grid-heading-{{ section.id }}">{{ heading }}</div>
      {% endif %}
      
      <div class="media-grid-items-{{ section.id }}">
        {% for block in section.blocks %}
          <{% if block.settings.button == blank and block.settings.collection != blank or block.settings.url != blank %}a href="{% if block.settings.collection != blank %}{{ block.settings.collection.url }}{% else %}{{ block.settings.url }}{% endif %}"{% else %}div{% endif %} class="media-grid-item-{{ section.id }} media-grid-item-{{ block.id }}">
            <div class="media-grid-image-{{ section.id }}">
              {% if block.settings.collection != blank and block.settings.collection.featured_image != blank and block.settings.image == blank %}
                <img src="{{ block.settings.collection.featured_image | image_url }}" alt="{{ block.settings.collection.featured_image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
              {% elsif block.settings.image != blank %}
                 <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
              {% else %}
                {{ 'collection-6' | placeholder_svg_tag }}
              {% endif %}
            </div>
            <div class="media-grid-content-{{ section.id }}">
              
              {% if block.settings.sub_heading != blank %}
                <div class="media-grid-subheading-{{ section.id }} media-grid-subheading-{{ block.id }}">{{ block.settings.sub_heading }} </div>
              {% endif %}
          
              {% if block.settings.title != blank %}
                <div class="media-grid-title-{{ section.id }} media-grid-title-{{ block.id }}">{{ block.settings.title }}</div>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="media-grid-text-{{ section.id }} media-grid-text-{{ block.id }}">{{ block.settings.text }}</div>
              {% endif %}

              {% if block.settings.button != blank %}
                <a href="{% if block.settings.collection != blank %}{{ block.settings.collection.url }}{% else %}{{ block.settings.url }}{% endif %}" class="media-grid-button-{{ section.id }} media-grid-button-{{ block.id }}">
                  {{ block.settings.button }}
