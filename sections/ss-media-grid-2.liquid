        }

        .media-grid-button-{{ block.id }} {
          margin-left: auto;
          margin-right: 0px;
        }
      }
    </style>

  {% elsif block.settings.content_align == "middle-left" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: center;
          justify-content: start;
          text-align: left;
        }

        .media-grid-button-{{ block.id }} {
          margin-left: 0px;
          margin-right: 0px;
        }
      }
    </style>

  {% elsif block.settings.content_align == "middle-center" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: center;
          justify-content: center;
          text-align: center;
        }
        
        .media-grid-button-{{ block.id }} {
          margin-left: auto;
          margin-right: auto;
        }
      }
    </style>

  {% elsif block.settings.content_align == "middle-right" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: center;
          justify-content: end;
          text-align: right;
        }
        
        .media-grid-button-{{ block.id }} {
          margin-left: auto;
          margin-right: 0px;
        }
      }
    </style>

  {% elsif block.settings.content_align == "bottom-left" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: end;
          justify-content: start;
          text-align: left;
        }

        .media-grid-button-{{ block.id }} {
          margin-left: 0px;
          margin-right: 0px;
        }
      }
    </style>

  {% elsif block.settings.content_align == "bottom-center" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: end;
          justify-content: center;
          text-align: center;
        }

        .media-grid-button-{{ block.id }} {
          margin-left: auto;
          margin-right: auto;
        }
      }
    </style>

  {% elsif block.settings.content_align == "bottom-right" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: end;
          justify-content: end;
          text-align: right;
        }

        .media-grid-button-{{ block.id }} {
          margin-left: auto;
          margin-right: 0px;
        }
      }
    </style>
  {% endif %}

  {% if button_style == "non_outline" or button_style == "non_outline_arrow" %}
    <style>
      .media-grid-button-{{ block.id }} {
        background-color: {{ block.settings.button_bg_color }};
      }
  
      .media-grid-button-{{ block.id }}:hover {
        background-color: {{ block.settings.button_bg_hover_color }};
      }
    </style>
  {% elsif button_style == "outline" or button_style == "outline_arrow" %}
    <style>
      .media-grid-button-{{ block.id }} {
        background-color: {{ block.settings.button_bg_color }};
        border: {{ button_border_thickness }}px solid {{ block.settings.button_border_color }};
      }
  
      .media-grid-button-{{ block.id }}:hover {
        background-color: {{ block.settings.button_bg_hover_color }};
        border: {{ button_border_thickness }}px solid {{ block.settings.button_border_hover_color }};
      }
    </style>
  {% endif %}
  
{% endfor %}

