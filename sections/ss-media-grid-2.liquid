  assign button_style = section.settings.button_style

-%}

{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  title_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .media-grid-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .media-grid-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .media-grid-items-{{ section.id }} {
    margin-top: {{ items_mt | times: 0.75 | round: 0 }}px;
    display: grid;
    align-items: start;
    grid: auto-flow dense {{ row_height_mobile }}px / repeat({{ items_columns_mobile }},minmax(0,1fr));
    gap: {{ items_gap_mobile }}px;
  }

  .media-grid-item-{{ section.id }} {
    border-radius: {{ item_radius }}px;
    border: {{ item_border_thickness }}px solid {{ item_border_color }};
    position: relative;
  }
  
  .media-grid-image-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .media-grid-image-{{ section.id }} img,
  .media-grid-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .media-grid-image-{{ section.id }} svg {
    background-color: #DADADA;
  }

  .media-grid-content-{{ section.id }} {
    position: relative;
    z-index: 2;
    padding: {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
  }

  .media-grid-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
    text-align: inherit;
  }

  .media-grid-title-{{ section.id }} {
    margin-top: {{ title_mt | times: 0.75 | round: 0 }}px;
  }

  .media-grid-title-{{ section.id }} * {
    margin: 0;
    font-size: {{ title_size_mobile }}px;
    line-height: {{ title_height }}%;
    text-transform: unset;
    text-align: inherit;
  }

  .media-grid-text-{{ section.id }} {
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
  }

  .media-grid-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    line-height: {{ text_height }}%;
    text-transform: unset;
    text-align: inherit;
  }

  .media-grid-button-{{ section.id }} {
    margin: 0;
    margin-top: {{ button_mt | times: 0.75 | round: 0 }}px;
    width: 100%;
    max-width: fit-content;
    display: flex;
    gap: 5px;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: {{ button_size_mobile }}px;
    line-height: {{ button_height }}%;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
  }

  .media-grid-button-{{ section.id }} svg {
    width: 12px;
    height: 12px;
  }
  
  @media(min-width: 768px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .media-grid-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .media-grid-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .media-grid-items-{{ section.id }} {
      margin-top: {{ items_mt }}px;
      gap: {{ items_gap }}px;
      --calculated-row-height: max(150px, min(100vw / 5, {{ row_height }}px));
      grid: auto-flow dense var(--calculated-row-height) / repeat({{ items_columns }},minmax(0,1fr));
    }

    .media-grid-content-{{ section.id }} {
      padding: {{ content_padding_vertical }}px {{ content_padding_horizontal }}px;
    }

    .media-grid-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .media-grid-title-{{ section.id }} {
      margin-top: {{ title_mt }}px;
    }
  
    .media-grid-title-{{ section.id }} * {
      font-size: {{ title_size }}px;
    }

    .media-grid-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
    }
  
    .media-grid-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .media-grid-button-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      font-size: {{ button_size }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}rem;
    }
  </style>
{% endunless %}

{% if heading_custom %}
  <style>
    .media-grid-heading-{{ section.id }} * {
      font-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
      font-weight: {{ heading_font.weight }};
      font-style: {{ heading_font.style }};
    }
  </style>
{% endif %}

{% if sub_heading_custom %}
  <style>
    .media-grid-subheading-{{ section.id }} * {
      font-family: {{ sub_heading_font.family }}, {{ sub_heading_font.fallback_families }};
      font-weight: {{ sub_heading_font.weight }};
      font-style: {{ sub_heading_font.style }};
    }
  </style>
{% endif %}

{% if title_custom %}
  <style>
    .media-grid-title-{{ section.id }} * {
      font-family: {{ title_font.family }}, {{ title_font.fallback_families }};
      font-weight: {{ title_font.weight }};
      font-style: {{ title_font.style }};
    }
  </style>
{% endif %}

{% if text_custom %}
  <style>
    .media-grid-text-{{ section.id }} * {
      font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
      font-weight: {{ text_font.weight }};
      font-style: {{ text_font.style }};
    }
  </style>
{% endif %}

{% if button_custom %}
  <style>
    .media-grid-button-{{ section.id }} {
      font-family: {{ button_font.family }}, {{ button_font.fallback_families }};
      font-weight: {{ button_font.weight }};
      font-style: {{ button_font.style }};
    }
  </style>
{% endif %}

{% if item_shadow %}
  <style>
    .media-grid-item-{{ section.id }} {
      box-shadow: {{ item_shadow_color | hex_to_rgba: 0.15 }} 0px 2px 8px;
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  <style>
    .media-grid-item-{{ block.id }} {
      display: flex;
      position: relative;
      height: 100%;
      grid-area: span min(1, {{ block.settings.row_width }}) / span min(1,{{ block.settings.column_width }});
      text-decoration: none;
      overflow: hidden;
    }

    .media-grid-item-{{ block.id }}::after {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      background-color: {{ overlay_color }};
      z-index: 1;
      opacity: {{ block.settings.bg_overlay }}%;
    }

    .media-grid-subheading-{{ block.id }} * {
      color: {{ block.settings.sub_heading_color }};
    }

    .media-grid-title-{{ block.id }} * {
      color: {{ block.settings.title_color }};
    }

    .media-grid-text-{{ block.id }} * {
      color: {{ block.settings.text_color }};
    }

    .media-grid-button-{{ block.id }} {
      color: {{ block.settings.button_color }};
    }

    .media-grid-button-{{ block.id }}:hover {
      color: {{ block.settings.button_hover_color }};
      transition: all 0.25s ease 0s;
    }

    .media-grid-button-{{ block.id }} svg path {
      fill: {{ block.settings.button_color }};
      transition: all 0.25s ease 0s;
    }
  
    .media-grid-button-{{ block.id }}:hover svg path {
      fill: {{ block.settings.button_hover_color }};
      transition: all 0.25s ease 0s;
    }

    @media(min-width: 1024px) {
      .media-grid-item-{{ block.id }} {
        grid-area: span min(2, {{ block.settings.row_width }}) / span min(2,{{ block.settings.column_width }});
      }
    }
    
  </style>

  {% if block.settings.content_align_mobile == "top-left" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: start;
        justify-content: start;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "top-center" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: start;
        justify-content: center;
        text-align: center;
      }

      .media-grid-button-{{ block.id }} {
        margin-left: auto;
        margin-right: auto;
      }
    </style>
    
  {% elsif block.settings.content_align_mobile == "top-right" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: start;
        justify-content: end;
        text-align: right;
      }

      .media-grid-button-{{ block.id }} {
        margin-left: auto;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "middle-left" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: center;
        justify-content: start;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "middle-center" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: center;
        justify-content: center;
        text-align: center;
      }

      .media-grid-button-{{ block.id }} {
        margin-left: auto;
        margin-right: auto;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "middle-right" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: center;
        justify-content: end;
        text-align: right;
      }

      .media-grid-button-{{ block.id }} {
        margin-left: auto;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "bottom-left" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: end;
        justify-content: start;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "bottom-center" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: end;
        justify-content: center;
        text-align: center;
      }

      .media-grid-button-{{ block.id }} {
        margin-left: auto;
        margin-right: auto;
      }
    </style>

  {% elsif block.settings.content_align_mobile == "bottom-right" %}
    <style>
      .media-grid-item-{{ block.id }} {
        align-items: end;
        justify-content: end;
        text-align: right;
      }

      .media-grid-button-{{ block.id }} {
        margin-left: auto;
      }
    </style>
  {% endif %}

  {% if block.settings.content_align == "top-left" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: start;
          justify-content: start;
          text-align: left;
        }

        .media-grid-button-{{ block.id }} {
          margin-left: 0px;
          margin-right: 0px;
        }
      }
    </style>
    
  {% elsif block.settings.content_align == "top-center" %}
    <style>
      @media(min-width: 768px) {
        .media-grid-item-{{ block.id }} {
          align-items: start;
          justify-content: center;
          text-align: center;
        }

        .media-grid-button-{{ block.id }} {
          margin-left: auto;
