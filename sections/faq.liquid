{% comment %} Lógica de puntos de ruptura y equivalencias {% endcomment %}
{%- render 'breakpoints', section: section -%}

{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign bg_color = false

  if color_scheme == '1'
    assign bg_color = settings.color_scheme_1_bg
  elsif color_scheme == '2'
    assign bg_color = settings.color_scheme_2_bg
  elsif color_scheme == '3'
    assign bg_color = settings.color_scheme_3_bg
  endif

  if bg_color == settings.bg_color or bg_color == 'rgba(0,0,0,0)'
    assign bg_color = false
  endif

  assign all_headings_empty = true

  for block in section.blocks
    if block.settings.heading != blank
      assign all_headings_empty = false
    endif
  endfor
-%}

{%- unless all_headings_empty -%}
  {% render 'grid-gap', section: section %}
  <div class="section-wrapper-cc {% render 'grid-breakpoints', section: section %}">
    <div class="section-customize">
      {%- unless section.settings.full_width -%}
        <div class="container">
      {%- endunless -%}

      <div
        class="section section-{{ section.id }} {% unless bg_color == false %} section--padded{% if section.settings.full_width %} section--full-width{% endif %}{% endunless %}{% unless color_scheme == 'none' %} color-scheme color-scheme--{{ color_scheme }}{% endunless %}"
        id="{{ section.id }}"
      >
        <div class="container">
          <div
            class="reading-width"
            {% if settings.animations_enabled != 'disabled' %}
              data-cc-animate
            {% endif %}
          >
            {%- if section.settings.heading != blank -%}
              <h2 class="h4 section__heading mb-12 {{ section.settings.heading_align }}">
                {{ section.settings.heading | escape }}
              </h2>
            {%- endif -%}

            {%- if section.settings.subHeading != blank -%}
              <p class="section__subheading mb-12 {{ section.settings.subHeading_align }}">
                {{ section.settings.subHeading | escape }}
              </p>
            {%- endif -%}

            {%- for block in section.blocks -%}
              {%- if block.type == 'category' -%}
                <h3
                  class="text-h5 xs:text-h6 font-body font-bold{% unless forloop.first %} mt-16{% endunless %} mb-6"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </h3>
              {%- elsif block.type == 'button' -%}
                <div class="{% unless forloop.first %} mt-6{% endunless %} mb-6" {{ block.shopify_attributes }}>
                  <a
                    class="{{ block.settings.button_style }}"
                    {% if block.settings.button_link != blank %}
                      href="{{ block.settings.button_link }}"
                    {% else %}
                      role="link" aria-disabled="true"
                    {% endif %}
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>
                </div>
              {%- elsif block.settings.heading != blank -%}
                <details-disclosure>
                  <details class="disclosure disclosure--row">
                    <summary>
                      <div class="flex justify-between items-center">
                        <h4 class="disclosure__title xs:regular-text h6 font-body flex flex-auto items-center mb-0 text-current">
                          {%- if block.settings.icon != 'none' -%}
                            {% render 'icon', icon: block.settings.icon, width: '1.2em', height: '1.2em' %}
                          {%- endif -%}
                          {{- block.settings.heading -}}
                        </h4>
                        <span class="disclosure__toggle">
                          {% render 'icon-plus' %}
                        </span>
                      </div>
                    </summary>
                    <div class="disclosure__panel has-motion">
                      <div class="disclosure__content rte">
                        {{ block.settings.text }}
                      </div>
                    </div>
                  </details>
                </details-disclosure>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>

      {%- unless section.settings.full_width -%}
        </div>
      {%- endunless -%}
    </div>
  </div>
{%- endunless -%}

<script type="application/ld+json">
  {%- capture faq_json -%}
    {%- for block in section.blocks -%}
      {%- if block.settings.heading != blank and block.settings.text != blank -%}
        {
          "@type": "Question",
          "name": {{ block.settings.heading | json }},
          "acceptedAnswer": {
            "@type": "Answer",
            "text": {{ block.settings.text | json }}
          }
        },
      {%- endif -%}
    {%- endfor -%}
  {%- endcapture -%}

  {%- if faq_json != blank -%}
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {{ faq_json | remove_last: ',' }}
    ]
  }
  {%- endif -%}
</script>

