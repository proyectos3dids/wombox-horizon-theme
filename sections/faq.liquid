<div class="faq section">
  {% if section.settings.heading != blank %}
    <h2 class="faq__title">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="faq__list">
    {% for block in section.blocks %}
      <details class="faq__item" {{ block.shopify_attributes }}>
        <summary class="faq__question">
          {{ block.settings.heading }}
        </summary>
        <div class="faq__answer rte">
          {{ block.settings.text }}
        </div>
      </details>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    { "type": "text", "id": "heading", "label": "Título", "default": "Preguntas frecuentes" }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Pregunta",
      "settings": [
        { "type": "text", "id": "heading", "label": "Pregunta", "default": "Título de la pregunta" },
        { "type": "richtext", "id": "text", "label": "Respuesta", "default": "<p>Respuesta de ejemplo.</p>" },
        { "type": "select", "id": "icon", "label": "Icono (opcional)", "default": "none",
          "options": [
            { "value": "none", "label": "Ninguno" },
            { "value": "plus", "label": "Plus" },
            { "value": "chevron", "label": "Chevron" }
          ]
        }
      ]
    }
  ],
  "presets": [{ "name": "FAQ" }]
}
{% endschema %}