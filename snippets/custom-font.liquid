

{% if settings.activar_fuente_uefan %}
  <style>
    @font-face {
      font-family: "UEFANations Bold";
      src: url("{{ 'UEFANations-Bold.woff2' | asset_url }}") format("woff2"),
           url("{{ 'UEFANations-Bold.woff'  | asset_url }}") format("woff");
      font-weight: bold;
      font-style: normal;
      font-display: swap;
    }

    html, body, * {
      font-family: "UEFANations Bold", sans-serif !important;
    }
  </style>
{% endif %}